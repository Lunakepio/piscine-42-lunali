unsigned char	ft_print_bits(unsigned char nb)
{
	int i;
	char tab[9];

	i = 7;
	while (i >= 0)
	{
		if(nb & 1)
			tab[i] = '1';
		else
			tab[i] = '0';
		nb >>= 1;
		i++;
	}
	tab[8] = 0;
	return (tab);
}
